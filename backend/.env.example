# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/travelwise?schema=public"

# OpenAI (for itinerary generation and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Google Places API (for place enrichment)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# OpenWeatherMap API (for weather-based checklist)
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Cache TTLs (in seconds)
CACHE_TTL_WEATHER=3600
CACHE_TTL_PLACES=86400

# Feature Flags
ENABLE_RAG=true
ENABLE_WEATHER_CHECKLIST=true
ENABLE_GOOGLE_PLACES_ENRICHMENT=true

# ==========================================
# Authentication
# ==========================================

# JWT Secret (min 32 characters, change in production!)
JWT_SECRET=your-jwt-secret-key-min-32-chars-change-this

# App URL (for email verification links)
APP_URL=http://localhost:3000

# Email (SMTP) - Optional, verification emails logged to console if not set
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=TravelWise <noreply@travelwise.app>

